Module Module1
    Sub Main()
        Do
            Console.WriteLine("1. Périmètre d'un cercle.")
            Console.WriteLine("2. Surface d'un cercle.")
            Console.WriteLine("3. Périmètre d'un rectangle.")
            Console.WriteLine("4. Surface d'un rectangle.")
            Console.WriteLine("5. Quitter.")
            Console.Write("Choix ? ")

            Dim choix As Integer = Convert.ToInt32(Console.ReadLine())

            If choix = 5 Then
                Console.WriteLine("Au revoir")
                Exit Do
            End If

            Dim rayon As Double = 0, longueur As Double = 0, largeur As Double = 0

            If choix = 1 Or choix = 2 Then
                rayon = Demander("Rayon du cercle ? (Rayon > 0)")
                If choix = 1 Then
                    Console.WriteLine("Périmètre: " & (2 * Math.PI * rayon))
                Else
                    Console.WriteLine("Surface: " & (Math.PI * rayon * rayon))
                End If
            ElseIf choix = 3 Or choix = 4 Then
                longueur = Demander("Longueur du rectangle ? (Longueur > 0)")
                largeur = Demander("Largeur du rectangle ? (Largeur > 0)")
                If choix = 3 Then
                    Console.WriteLine("Périmètre: " & (2 * (longueur + largeur)))
                Else
                    Console.WriteLine("Surface: " & (longueur * largeur))
                End If
            Else
                Console.WriteLine("Choix erroné.")
            End If

            Console.WriteLine(". . . Rappel menu . . .")
        Loop
    End Sub

    Function Demander(prompt As String) As Double
        Dim valeur As Double
        Do
            Console.Write(prompt & " ")
            valeur = Convert.ToDouble(Console.ReadLine())
        Loop While valeur <= 0
        Return valeur
    End Function
End Module
