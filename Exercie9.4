Module Exercice94
    Sub Main()
        Dim autreRepresentant As String

        Do
            Console.Write("Nom du représentant ? ")
            Dim nom As String = Console.ReadLine()

            Dim totalVentes As Decimal = 0
            Dim semaines As Integer = 0

            For i As Integer = 1 To 4
                Console.Write($"Semaine {i}: Ventes H.T hebdomadaires (0 pour stopper la saisie) ? ")
                Dim vente As Decimal

                While Not Decimal.TryParse(Console.ReadLine(), vente) OrElse vente < 0
                    Console.WriteLine("Ventes ne peuvent être < 0")
                    Console.Write($"Semaine {i}: Ventes H.T hebdomadaires (0 pour stopper la saisie) ? ")
                End While

                If vente = 0 Then
                    Exit For
                End If

                totalVentes += vente
                semaines += 1
            Next

            Dim commission As Decimal = totalVentes * 0.1D


            Console.WriteLine($"Bilan pour {nom}")
            Console.WriteLine($"Total des ventes H.T. = {totalVentes}")
            Console.WriteLine($"Commission = {commission}")


            Console.Write("Autre représentant (O/N) ? ")
            autreRepresentant = Console.ReadLine().ToUpper()

        Loop While autreRepresentant = "O"

        Console.WriteLine("Au revoir")
    End Sub
End Module
