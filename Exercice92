Module Exercice92
    Sub Main()
        Dim somme, compteur, moyenne, test As Double


        Do
            test = 0
            Console.WriteLine("Note ? Entre 0 et 20,-1 pour sortir")
            test = Console.ReadLine()

            If test >= 0 And test <= 20 Then
                somme = somme + test
                compteur += 1
            Else

                Console.WriteLine("La note doit Ãªtre entre 0 et 20")

            End If

        Loop Until test = -1


        Console.WriteLine("Somme : " + somme.ToString)
        Console.WriteLine("Compteur : " + compteur.ToString)
        moyenne = somme / compteur
        Console.WriteLine("Moyenne = " + moyenne.ToString)
        Console.WriteLine("Au revoir.")
    End Sub
End Module
